{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--disable-extensions"
            ],
            "env": {
                "VSCODE_FORCE_TERMINAL_COLOR": "true"
            },
            "outFiles": [
                "${workspaceFolder}/extension.js"
            ],
            "preLaunchTask": "Terminal Settings"
        }
    ]
}